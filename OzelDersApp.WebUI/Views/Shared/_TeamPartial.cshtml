@model List<TeacherModel>
@{
    List<TeacherModel> teachers = Model;
}
<div class="container-xxl py-6">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h6 class="text-primary text-uppercase mb-2">Meet The Team</h6>
            <h1 class="display-6 mb-4">We Have Great Experience Of Driving</h1>
        </div>
        <div class="row g-0 team-items">

            @if (Model.Count() > 0)
            {
                <div class="g-3 row">
                    @foreach (var teacher in teachers)
                    {
                        <div class=" col-lg-3 col-md-4 col-12">
                            @await Html.PartialAsync("_TeamPartPartial",teacher)
                        </div>
                    }
                </div>
               @* <div class="mt-2">
                    <p>Toplam <span class="text-danger">@teachers.Count</span> adet öğretmen listelenmiştir...</p>
                </div>*@
            }
            else
            {
                @await Html.PartialAsync("_NoRecord","Öğretmen")
            }
          
        </div>
    </div>
</div>
