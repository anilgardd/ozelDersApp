@model TeacherViewModel

<form asp-area="Admin"
      asp-controller="Teachers"
      asp-action="Delete"
      method="post">
    <input type="hidden" asp-for="User.Id" />

    <div class="card w-50 mt-5 ms-5">
        <div class="card-header display-6 mt-2 text-danger">
            Öğretmen Siliniyor!
        </div>
        <div class="card-body mt-5">
            <div class="row">
                <div class="col-2">
                    <img src="~/images/@Model.Image.Url" class="img-thumbnail" width="100" alt="...">
                </div>
                <div class="col-5 ms-2">
                    <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                    <h6 class="card-text">@Model.Graduation</h6>
                    <p class="card-text">@Model.City</p>
                    <p class="card-text">@Model.Phone</p>
                </div>
                <div class="col-4">
                    <h5 class="text-danger">Branşlar</h5>
                    <ul>
                        @foreach (var branch in Model.Branches)
                        {
                            <li>@branch.BranchName</li>
                        }
                    </ul>
                </div>
            </div>

            <button type="submit" class="btn btn-danger float-end mt-5">Sil</button>
        </div>
    </div>
</form>
